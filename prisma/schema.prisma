generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model highScoreRecord {
  high_score_record_id Int    @unique @default(autoincrement())
  user_id              String
  high_score_record    Int    @unique @default(0)
  user                 user   @relation(fields: [user_id], references: [user_id], onDelete: Cascade)

  @@index([user_id], map: "highScoreRecord_user_id_fkey")
}

model tower {
  tower_id Int @unique @default(autoincrement())
}

model user {
  user_id         String            @id @unique
  user_pw         String
  highScoreRecord highScoreRecord[]
}
